<h2>This is index page</h2>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan='3'>Actions</th>
        </tr>
    </thead>

    <tbody>
    <% @articles.each do |i|%>
        <tr>
            <td><%= i.title%></td>
            <td><%= i.description%></td>
            <td><%= link_to 'Show | ', article_path(i) %></td> 
            <td><%= link_to 'Edit | ', edit_article_path(i) %></td> 
            <td><%= link_to 'Delete', article_path(i.id), method: :delete , data:{confirm: "Are you sure, article with id #{i.id}? "}%></td>
        </tr>
        <%end%>
    </tbody>
</table>

<p>
<%= link_to 'Create new article', new_article_path%>
</p>